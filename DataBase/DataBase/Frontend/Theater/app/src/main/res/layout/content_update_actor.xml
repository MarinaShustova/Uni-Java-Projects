<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_update_actor"
        tools:context=".UpdateActorActivity" tools:ignore="MissingDefaultResource">
    <EditText
            android:layout_width="319dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/actor_update_salary" android:hint="Зарплата" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_children_amount"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/actor_update_children_amount" android:hint="Количество детей"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actor_update_origin" android:hint="Происхождение" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_salary" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Отправить"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:id="@+id/actor_update_submit"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/actor_update_student"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actor_update_name" android:hint="ФИО" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="321dp"
            android:layout_height="42dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/actor_update_hire" android:hint="Дата приема" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_origin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actor_update_sex" android:hint="Пол" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <CheckBox
            android:text="Студент"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actor_update_student"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="в формате yyyy-mm-dd"
            android:layout_width="179dp"
            android:layout_height="20dp"
            android:id="@+id/textView2" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_hire" android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/actor_update_hire"/>
    <TextView
            android:text="в формате yyyy-mm-dd"
            android:layout_width="179dp"
            android:layout_height="23dp"
            android:id="@+id/textView4" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_birth" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/actor_update_birth"/>
    <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/actor_update_birth" android:hint="Дата рождения" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_sex" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>